<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_rectangle"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_68"
            android:layout_marginLeft="@dimen/dp_25"
            android:gravity="left|center_vertical"
            android:text="@string/currency_choose"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_E7E7E7" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:layout_marginLeft="@dimen/dp_25"
            android:gravity="left|center_vertical"
            android:text="@string/name"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_15" />

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_25"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="@dimen/dp_16"
                android:background="@drawable/shape_light_green_bottom_btn"
                android:maxLength="20"
                android:hint="@string/contributing_name_hint"
                android:textColor="@color/front_one"
                android:textColorHint="@color/front_four" />

            <ImageView
                android:id="@+id/iv_qr"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_scan_icon" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dp_25"
            android:gravity="left|center_vertical"
            android:text="@string/address"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_15" />

        <LinearLayout
            android:layout_marginStart="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="@dimen/dp_25">

            <EditText
                android:id="@+id/edit_address"
                android:layout_width="0dp"
                android:paddingStart="@dimen/dp_16"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/contributing_address_hint"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:background="@drawable/shape_light_green_bottom_btn"
                android:maxLength="42"
                android:textColor="@color/front_one"
                android:textColorHint="@color/front_four" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/color_3BB7A5"
                android:textSize="@dimen/sp_15"
                android:background="@drawable/shape_fix_green_line_btn" />

            <TextView
                android:id="@+id/tv_updata"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dp_25"
                android:gravity="center"
                android:text="@string/edit"
                android:background="@drawable/shape_green_bottom_btn"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

    </LinearLayout>
</layout>