<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MnemonicConfirmActivity">

        <LinearLayout
            android:id="@+id/ll_contributing_words_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_contributing_words_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:text="@string/contributing_words_confirm"
                android:textColor="@color/color_000000" />

            <LinearLayout
                android:id="@+id/edt_contributing_words_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_white_line_gray_bottom_btn"
                android:padding="@dimen/dp_5">

                <TextView
                    android:id="@+id/tv_contributing_words_confirm_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contributing_words_hint"
                    android:textColor="@color/color_9598AA"
                    android:textSize="@dimen/sp_15" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_contributing_words"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_title"
                    app:spanCount="4" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_contributing_words_confirm">

            <LinearLayout
                android:id="@+id/ll_english"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_english"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/english"
                    android:textColor="@color/color_000000" />

                <View
                    android:id="@+id/v_english"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/color_3F5E94" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_chinese"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_chinese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chinese"
                    android:textColor="@color/color_000000" />

                <View
                    android:id="@+id/v_chinese"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/color_9598AA" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_contributing_words_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_title">

            <TextView
                android:id="@+id/tv_contributing_words_name_1"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/shape_white_line_gray_bottom_btn"
                android:gravity="center"
                android:textColor="@color/color_000000"
                tools:text="addict" />

            <TextView
                android:id="@+id/tv_contributing_words_name_2"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/shape_white_line_gray_bottom_btn"
                android:gravity="center"
                android:textColor="@color/color_000000"
                tools:text="addict" />

            <TextView
                android:id="@+id/tv_contributing_words_name_3"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/shape_white_line_gray_bottom_btn"
                android:gravity="center"
                android:textColor="@color/color_000000"
                tools:text="addict" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_contributing_words_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_contributing_words_1">

            <TextView
                android:id="@+id/tv_contributing_words_name_4"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/shape_white_line_gray_bottom_btn"
                android:gravity="center"
                android:textColor="@color/color_000000"
                tools:text="addict" />

            <TextView
                android:id="@+id/tv_contributing_words_name_5"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/shape_white_line_gray_bottom_btn"
                android:gravity="center"
                android:textColor="@color/color_000000"
                tools:text="addict" />

            <TextView
                android:id="@+id/tv_contributing_words_name_6"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/shape_white_line_gray_bottom_btn"
                android:gravity="center"
                android:textColor="@color/color_000000"
                tools:text="addict" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_contributing_words_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_contributing_words_2">

            <TextView
                android:id="@+id/tv_contributing_words_name_7"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/shape_white_line_gray_bottom_btn"
                android:gravity="center"
                android:textColor="@color/color_000000"
                tools:text="addict" />

            <TextView
                android:id="@+id/tv_contributing_words_name_8"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/shape_white_line_gray_bottom_btn"
                android:gravity="center"
                android:textColor="@color/color_000000"
                tools:text="addict" />

            <TextView
                android:id="@+id/tv_contributing_words_name_9"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/shape_white_line_gray_bottom_btn"
                android:gravity="center"
                android:textColor="@color/color_000000"
                tools:text="addict" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_contributing_words_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_contributing_words_3">

            <TextView
                android:id="@+id/tv_contributing_words_name_10"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/shape_white_line_gray_bottom_btn"
                android:gravity="center"
                android:textColor="@color/color_000000"
                tools:text="addict" />

            <TextView
                android:id="@+id/tv_contributing_words_name_11"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/shape_white_line_gray_bottom_btn"
                android:gravity="center"
                android:textColor="@color/color_000000"
                tools:text="addict" />

            <TextView
                android:id="@+id/tv_contributing_words_name_12"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/shape_white_line_gray_bottom_btn"
                android:gravity="center"
                android:textColor="@color/color_000000"
                tools:text="addict" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_contributing_words_completed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/shape_gray_bottom_btn"
            android:gravity="center"
            android:enabled="false"
            android:outlineProvider="none"
            android:textAllCaps="false"
            android:text="@string/contributing_words_completed"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/dp_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_contributing_words_4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
