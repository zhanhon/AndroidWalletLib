<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_rectangle"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/miner_fee"
        android:textColor="@color/color_000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/color_E2E2E2" />

    <LinearLayout
        android:id="@+id/rl_create_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_20">

        <ImageView
            android:id="@+id/iv_create_wallet_icon"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/vector_create_wallet" />

        <LinearLayout
            android:id="@+id/ll_create_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_create_wallet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_wallet"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/tv_create_wallet_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_wallet_yet_click_create"
                android:textColor="@color/color_9598AA"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:padding="@dimen/dp_20"
            android:src="@mipmap/ic_arrow_right"
            android:textColor="@color/color_000000" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_F9F9F9"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="@string/import_wallet"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:id="@+id/rl_contributing_words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_20">

        <ImageView
            android:id="@+id/iv_eth_currency_icon"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/vector_contributing_words" />

        <LinearLayout
            android:id="@+id/ll_eth_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_eth_currency_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contributing_words"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/tv_eth_currency_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/use_original_mnemonic_word_wallet_import"
                android:textColor="@color/color_9598AA"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:padding="@dimen/dp_20"
            android:src="@mipmap/ic_arrow_right"
            android:textColor="@color/color_000000" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_60"
        android:background="@color/color_E7E7E7" />

    <LinearLayout
        android:id="@+id/rl_secret_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_20">

        <ImageView
            android:id="@+id/iv_trx_currency_icon"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/vector_private_key" />

        <LinearLayout
            android:id="@+id/ll_trx_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_trx_currency_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/secret_key"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/tv_trx_currency_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/private_key_characters"
                android:textColor="@color/color_9598AA"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:padding="@dimen/dp_20"
            android:src="@mipmap/ic_arrow_right"
            android:textColor="@color/color_000000" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_60"
        android:background="@color/color_E7E7E7" />

    <LinearLayout
        android:id="@+id/rl_keystore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_20">

        <ImageView
            android:id="@+id/iv_btc_currency_icon"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/vector_keystore" />

        <LinearLayout
            android:id="@+id/ll_btc_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_btc_currency_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keystore"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/tv_btc_currency_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/encrypt_private_key_json_file"
                android:textColor="@color/color_9598AA"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:padding="@dimen/dp_20"
            android:src="@mipmap/ic_arrow_right"
            android:textColor="@color/color_000000" />
    </LinearLayout>
</LinearLayout>
