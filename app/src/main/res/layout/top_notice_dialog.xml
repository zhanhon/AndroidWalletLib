<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/trans_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_eth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_eth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:text="ETH"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/iv_eth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/tv_eth"
                android:src="@drawable/vector_three_ok"
                android:visibility="invisible" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_E7E7E7" />

        <RelativeLayout
            android:id="@+id/rl_btc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_btc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:text="BTC"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/iv_btc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/tv_btc"
                android:src="@drawable/vector_three_ok"
                android:visibility="invisible" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_E7E7E7" />

        <RelativeLayout
            android:id="@+id/rl_trx"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_trx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:text="TRX"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/iv_trx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/tv_trx"
                android:src="@drawable/vector_three_ok"
                android:visibility="invisible" />

        </RelativeLayout>
    </LinearLayout>
</layout>