<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_EFF2F2"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFF"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/vector_left_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_recover_wallet_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_10"
                android:text="ETH"
                android:textColor="@color/color_000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/color_F9F9F9" />

        <RelativeLayout
            android:id="@+id/rl_edit_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/color_FFFFFF"
            android:paddingLeft="@dimen/dp_20">

            <TextView
                android:id="@+id/tv_edit_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_wallet"
                android:layout_centerVertical="true"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:padding="@dimen/dp_20"
                android:src="@mipmap/ic_arrow_right"
                android:textColor="@color/color_000000" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@color/color_F9F9F9" />

        <RelativeLayout
            android:id="@+id/rl_contributing_words_backups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="@color/color_FFFFFF"
            android:paddingLeft="@dimen/dp_20">

            <TextView
                android:id="@+id/tv_contributing_words_backups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/backup_memorization_words"
                android:layout_centerVertical="true"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:padding="@dimen/dp_20"
                android:src="@mipmap/ic_arrow_right"
                android:textColor="@color/color_000000" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@color/color_F9F9F9" />

        <RelativeLayout
            android:id="@+id/rl_secret_key_backups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFF"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_20">

            <TextView
                android:id="@+id/tv_secret_key_backups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/secret_key_backup"
                android:layout_centerVertical="true"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:padding="@dimen/dp_20"
                android:src="@mipmap/ic_arrow_right"
                android:textColor="@color/color_000000" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@color/color_F9F9F9" />

        <RelativeLayout
            android:id="@+id/rl_keystore_backups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:orientation="horizontal"
            android:background="@color/color_FFFFFF"
            android:paddingLeft="@dimen/dp_20">

            <TextView
                android:id="@+id/tv_keystore_backups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/keystore_backup"
                android:layout_centerVertical="true"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:padding="@dimen/dp_20"
                android:src="@mipmap/ic_arrow_right"
                android:textColor="@color/color_000000" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_delete_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_15"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_200"
            android:text="@string/delete_wallet"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_E11334"
            android:background="@color/color_FFFFFF" />
    </LinearLayout>
</layout>
