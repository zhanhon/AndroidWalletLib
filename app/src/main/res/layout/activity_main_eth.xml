<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_078DC2"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="ETH"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/sp_20" />

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/vector_menu" />

            <LinearLayout
                android:id="@+id/toolbar_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/btnMenu"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/iv_gathering_top"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/vector_gathering_small" />

                <ImageView
                    android:id="@+id/iv_transfer_top"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/vector_transfer_small" />

                <ImageView
                    android:id="@+id/iv_scan_top"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/vector_scan_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toolbar_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/iv_notice_top"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_margin="@dimen/dp_10"
                    android:src="@drawable/vector_message_center_red" />

                <ImageView
                    android:id="@+id/iv_mine_top"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/vector_personal" />
            </LinearLayout>
        </RelativeLayout>


        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_078DC2">

                <LinearLayout
                    android:id="@+id/linearBtns"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_64"
                    android:layout_marginBottom="@dimen/dp_15"
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

                    <LinearLayout
                        android:id="@+id/ll_gathering"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_64"
                        android:layout_weight="1"
                        android:background="@color/cardview_shadow_end_color"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginTop="@dimen/dp_3"
                            android:background="@drawable/vector_home_gathering" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:text="@string/gathering"
                            android:textColor="@color/color_FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_transfer"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_64"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@color/cardview_shadow_end_color"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:background="@drawable/vector_home_transfer" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:text="@string/transfer"
                            android:textColor="@color/color_FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_scan"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_64"
                        android:layout_weight="1"
                        android:background="@color/cardview_shadow_end_color"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:background="@drawable/vector_home_scan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:text="@string/scan"
                            android:textColor="@color/color_FFFFFF" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_card"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_240"
                    android:background="@mipmap/ic_home_eth_spread"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_wallet_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chric"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="@dimen/dp_15" />

                        <ImageView
                            android:id="@+id/iv_balance_refresh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_15"
                            android:background="@drawable/vector_refresh" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_currency_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top|left"
                            android:text="$"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="@dimen/dp_12" />

                        <TextView
                            android:id="@+id/tv_balance_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="@dimen/dp_17" />

                        <ImageView
                            android:id="@+id/iv_eyes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_15"
                            android:background="@drawable/vector_home_address_open"
                            android:checked="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_35"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_eth_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0xxxs....sdfs"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="@dimen/dp_12" />

                        <ImageView
                            android:id="@+id/iv_copy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_20"
                            android:background="@drawable/vector_home_copy" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_90"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_marginBottom="@dimen/dp_2"
                            android:background="@drawable/shape_green_endways_bottom_btn" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_5"
                            android:text="@string/asset"
                            android:textColor="@color/color_000000" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_marginBottom="@dimen/dp_2"
                            android:background="@drawable/shape_gray_endways_bottom_btn" />

                        <TextView
                            android:id="@+id/tv_ntf"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_5"
                            android:text="NTF"
                            android:textColor="@color/color_9598AA" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_24">

                            <ImageView
                                android:id="@+id/iv_token_manage_click"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_marginStart="@dimen/dp_20"
                                android:layout_marginEnd="@dimen/dp_10"
                                android:background="@drawable/vector_token_manage" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_currency"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_FFFFFF"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>
</layout>
