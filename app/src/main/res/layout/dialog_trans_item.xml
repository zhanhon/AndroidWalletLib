<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_white_rectangle"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tv_transfer_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:gravity="left|center_vertical"
        android:text="@string/language_choose"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_E7E7E7" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:gravity="left|center_vertical"
        android:text="@string/name"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/sp_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_E7E7E7" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="left|center_vertical"
        tools:text="@string/language_traditional_chinese"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/sp_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_E7E7E7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="left|center_vertical"
            android:text="@string/save_address_book"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_15" />
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/tv_check"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_selector" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_E7E7E7" />

    <TextView
        android:id="@+id/ok"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="@string/confirm"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/shape_green_bottom_btn"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"/>
</LinearLayout>