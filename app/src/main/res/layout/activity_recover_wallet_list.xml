<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFF"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/vector_left_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_recover_wallet_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_10"
                android:text="@string/recover_wallet"
                android:textColor="@color/color_000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/color_F9F9F9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFF"
            android:orientation="vertical">

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_eth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_20">

            <ImageView
                android:id="@+id/iv_eth_currency_icon"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/vector_eth" />

            <LinearLayout
                android:id="@+id/ll_eth_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/iv_eth_currency_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_40"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_eth_currency_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ETH"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:id="@+id/tv_eth_currency_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ethereum"
                    android:textColor="@color/color_9598AA"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_eth_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:padding="@dimen/dp_20"
                android:src="@mipmap/ic_arrow_right"
                android:textColor="@color/color_000000" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@color/color_F9F9F9" />

        <RelativeLayout
            android:id="@+id/rl_trx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_20">

            <ImageView
                android:id="@+id/iv_trx_currency_icon"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/vector_trx" />

            <LinearLayout
                android:id="@+id/ll_trx_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/iv_trx_currency_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_40"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_trx_currency_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TRX"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:id="@+id/tv_trx_currency_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TRON"
                    android:textColor="@color/color_9598AA"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_trx_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:padding="@dimen/dp_20"
                android:src="@mipmap/ic_arrow_right"
                android:textColor="@color/color_000000" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@color/color_F9F9F9" />

        <RelativeLayout
            android:id="@+id/rl_btc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_20">

            <ImageView
                android:id="@+id/iv_btc_currency_icon"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/vector_btc" />

            <LinearLayout
                android:id="@+id/ll_btc_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/iv_btc_currency_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_40"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_btc_currency_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BTC"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:id="@+id/tv_btc_currency_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bitcoin"
                    android:textColor="@color/color_9598AA"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_btc_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:padding="@dimen/dp_20"
                android:src="@mipmap/ic_arrow_right"
                android:textColor="@color/color_000000" />
        </RelativeLayout>
    </LinearLayout>
</layout>
