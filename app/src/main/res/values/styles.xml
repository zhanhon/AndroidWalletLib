<resources>

    <style name="WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapCon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="ConCon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="ConWrap">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="CommonImage" parent="WrapWrap">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="SingleLineText">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MyFullScreenFragmentDialog" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyScrimInsetsFrameLayout" parent="MyFullScreenFragmentDialog">
        <item name="insetForeground">#4000</item>
    </style>

    <style name="GameActionDivider">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">@dimen/dp_0</item>
    </style>

    <style name="LobbyHeaderText" parent="WrapWrap">
        <item name="android:textColor">@color/front_two</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HomeGameItemLayout">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_mine_action</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_52</item>
    </style>

    <style name="FeedbackTodoText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_42</item>
        <item name="android:background">@drawable/selector_help_item</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:drawableRight">@drawable/ic_arrow_size16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/front_one</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="MyMatisse" parent="Matisse.Zhihu">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
    </style>
</resources>
